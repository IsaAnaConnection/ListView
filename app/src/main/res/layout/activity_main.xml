<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="78dp"
                android:layout_height="67dp"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/logo_app_db" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingTop="20dp"
                android:text="DB"
                android:textColor="#215574"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Connection"
                android:textColor="#092B40"
                android:textSize="18sp" />
            <Space
                android:layout_width="130dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtSair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingTop="10dp"
                android:text="X"
                android:textColor="#000000"
                android:textSize="28sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Cadastre, consulte, atualize, exclua"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="todos os seus dados"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="40dp"
            android:text="ID"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtId"
            android:layout_width="320dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Insira o ID"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#474646"
            android:textSize="14sp"
            android:onClick="novo" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="40dp"
            android:text="Nome"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="320dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Insira o nome"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#474646"
            android:textSize="14sp"
            android:onClick="novo"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="40dp"
            android:text="CPF"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtCpf"
            android:layout_width="320dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Insira o CPF"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#474646"
            android:textSize="14sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="40dp"
            android:text="Telefone"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtTelefone"
            android:layout_width="320dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="TELEFONE"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#474646"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/btnNovo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#215574"
                android:fontFamily="@font/poppins_bold"
                android:onClick="novo"
                android:text="Novo"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                app:cornerRadius="10dp" />

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#215574"
                android:fontFamily="@font/poppins_bold"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                app:cornerRadius="10dp"
                android:onClick="salvar"
                android:text="Salvar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/btnConsultar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#215574"
                android:fontFamily="@font/poppins_bold"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                app:cornerRadius="10dp"
                android:onClick="consultar"
                android:text="Consultar" />

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnExcluir"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#215574"
                android:fontFamily="@font/poppins_bold"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                app:cornerRadius="10dp"
                android:onClick="excluir"
                android:text="Excluir"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/btnAlterar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#215574"
                android:fontFamily="@font/poppins_bold"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                app:cornerRadius="10dp"
                android:onClick="alterar"
                android:text="Alterar"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>